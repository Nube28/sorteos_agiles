{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main",
  "compilerOptions": {
    "deleteOutDir": false,
    "webpack": true,
    "webpackConfigPath": "webpack.config.cjs",
    "tsConfigPath": "tsconfig.app.json",
    "assets": ["src/assets/**/*"],
    "watchAssets": true
  }
}
